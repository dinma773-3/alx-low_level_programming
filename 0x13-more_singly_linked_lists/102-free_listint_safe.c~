#include "lists.h"
#include <stdlib.h>

/**
 * free_listint_safe - frees a listint_t list
 * @h: pointer to the first node
 *
 * Return: the size of the list that was freeâ€™d
 */
size_t free_listint_safe(listint_t **h)
{
  size_t len = 0;
  listint_t *head = *h;
  listint_t *tmp == NULL;

  while (head != NULL)
    {
      tmp = head;
      head = head->next;

      free(tmp);
      len++;

      if (head < tmp)
	{
	  *h = NULL;
	  break;
	}
    }
  return (len);
}
